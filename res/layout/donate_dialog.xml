<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:smssync="http://zegoggles.com/smssync"

    android:id="@+id/donate_dialog_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">

   <com.zegoggles.smssync.NumberPicker
        android:id="@+id/amount"
        smssync:initialValue="1.5"
        smssync:minimumValue="0.5"
        smssync:increment="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
    />

    <Spinner
        android:id="@+id/currency"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/ui_donation_prompt_currency"
    />
</LinearLayout>
